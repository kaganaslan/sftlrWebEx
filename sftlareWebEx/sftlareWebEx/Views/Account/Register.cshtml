@using sftlareWebEx.Data.ViewModels
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<link href="~/css/logincart.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-card">
                <div class="card-header text-white card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"] </span>
                        </div>
                    }

                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" placeholder="E-mail Address" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input class="btn btn-success float-right" type="submit" value="Sign up" />
                            <a class="btn btn-secondary" asp-controller="Movies" asp-action="Index">Cancel</a>
                        </div>
                    </form>

                    <div class="form-group mt-4 text-center">
                        <span>Have an account?</span>
                        <a class="btn btn-primary ml-2" asp-controller="Account" asp-action="Login">Log in</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

